global gSpriteManagerproperty myPlayerBlock,myGfx,myBlocks,myScoreManageron beginsprite me  if voidp(myPlayerBlock) then sprite(35).blend=0  --  me.StartNewGame()endon actionkey me,val  put valendon keyaction me,val  if voidp(myPlayerBlock) then exit  myPlayerBlock.keyyed(val)endon PauseGame me  if voidp(myPlayerBlock) or myPlayerBlock=0 then exit  myPlayerBlock.PauseGame()endon NewGame me  -- check if the game isnt set to pause  if objectp(myPlayerBlock) then     _pause = myPlayerBlock.GetPause()    if _pause=false then      me.teminateGame()      me.StartNewGame()    end if  else    me.teminateGame()    me.StartNewGame()  end ifendon endsprite me  me.teminateGame()endon StartNewGame me  if voidp(gSpriteManager) then gSpriteManager = script("SpriteManager").new(100)  myWidth = 11  myHeight = 22  myGfx = script("Gfx").new()  myScoreManager = script("ScoreManager").new()  myBlocks = script("Blocks").new(myGfx,myScoreManager,myWidth,myHeight)  myPlayerBlock = script("PlayerBlock").new(myGfx,myBlocks,myScoreManager,myWidth,myHeight)  myPlayerBlock.createBlock()endon teminateGame me  if myPlayerBlock <> 0 then myPlayerBlock.destroy()  myPlayerBlock = 0  if myBlocks<> 0 then myBlocks.destroy()  myBlocks = 0  if myGfx<> 0 then myGfx.destroy()  myGfx = 0  if myScoreManager<> 0 then myScoreManager.destroy()  myScoreManager = 0endon SpaceBar me  if voidp(myPlayerBlock) or myPlayerBlock=0 then exit  myPlayerBlock.LetBlockFall()end