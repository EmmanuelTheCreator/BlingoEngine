global gSpriteManager,gMousePointeron startmovie   if voidp(gSpriteManager) then gSpriteManager = script("SpriteManager").new(100)  if voidp(gMousePointer) then     gMousePointer = script("MousePointer").new(999)  end if    endon stopMovie  gSpriteManager.destroy()  gMousePointer.destroy()  gMousePointer = void  the actorlist = []endon replaceSpaces str,leng  --------------------------------------  -- replace spaces with underscore  thisField = str  repeat with i=1 to thisField.length    if thisField.char[i]=" " then      thisField = thisField.char[1..i-1]&"_"&thisField.char[i+1..thisField.length]    end if  end repeat  --  thisField = thisField.char[1..thisField.length-1] -- remove last underscore  if thisField.length>leng then thisField = thisField.char[1..leng]  --------------------------------------  return thisFieldend