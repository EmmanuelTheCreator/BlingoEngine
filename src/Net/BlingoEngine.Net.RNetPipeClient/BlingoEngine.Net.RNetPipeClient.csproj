<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <LangVersion>latest</LangVersion>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
          <Configurations>Debug;Release</Configurations>
  </PropertyGroup>
  <PropertyGroup>
    <!-- NuGet Packaging Metadata -->
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageId>BlingoEngine.Net.RNetPipeClient</PackageId>
    <Version>1.0.0</Version>
    <Authors>Emmanuel The Creator</Authors>
    <Company>The Community</Company>
    <Description>Named pipe/Unix domain socket client for local RNet communication.</Description>
    <RepositoryUrl>https://github.com/EmmanuelTheCreator/BlingoEngine</RepositoryUrl>
    <PackageTags>BlingoEngine RNet Pipe Client</PackageTags>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
  </PropertyGroup>
  <ItemGroup>
    <PackageReference Include="System.Threading.Channels" Version="8.*" />
  </ItemGroup>
  <ItemGroup>
    <ProjectReference Include="..\\BlingoEngine.Net.RNetClient.Common\\BlingoEngine.Net.RNetClient.Common.csproj" />
    <ProjectReference Include="..\\BlingoEngine.Net.RNetContracts\\BlingoEngine.Net.RNetContracts.csproj" />
  </ItemGroup>
</Project>

